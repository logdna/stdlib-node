{
  "name": "@answerbook/stdlib",
  "description": "Standardized module functions free of business logic",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "tap": "tap",
    "lint": "eslint ./",
    "lint:fix": "npm run lint -- --fix",
    "test": "tools/test-ci.sh",
    "pretest": "npm run lint",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run --no-ci --branches=${BRANCH_NAME:-main}"
  },
  "files": [
    "lib/",
    "index.js",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "author": "Eric Satterwhite <eric.satterwhite@logdna.com>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/answerbook/stdlib-node"
  },
  "homepage": "https://github.com/answerbook/stdlib-node",
  "bugs": {
    "url": "https://github.com/answerbook/stdlib-node/issues"
  },
  "license": "SEE LICENSE IN LICENSE",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "release": {
    "branches": [
      "master"
    ],
    "extends": "@answerbook/release-config-npm"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "node_modules/",
      "coverage/"
    ],
    "extends": [
      "logdna"
    ],
    "parserOptions": {
      "ecmaVersion": 2019
    },
    "plugins": []
  },
  "devDependencies": {
    "@answerbook/release-config-npm": "^1.0.15",
    "benchmark": "^2.1.4",
    "eslint": "^7.7.0",
    "eslint-config-logdna": "^5.0.0",
    "microtime": "^3.0.0",
    "semantic-release": "^17.4.2",
    "tap": "^15.0.6"
  }
}
